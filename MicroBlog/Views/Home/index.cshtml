<!doctype html>
<html ng-app="MicroBlog">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=9;IE=10;IE=11">
    <title ng-bind="module.pageTitle">Micro Blog</title>
    @Styles.Render("~/css/bootstrap")
    @Styles.Render("~/css/styles")
</head>
<body>
    <div class="container container-default">
        <div class="row app-header">
            <div class="col-sm-6">
                <ul class="nav nav-pills">
                    <li role="presentation"><a href="/#/authors">Auteurs</a></li>
                    <li role="presentation"><a href="/#/posts">Billets</a></li>
                </ul>
            </div>
            <div class="col-sm-6">
                <h3 class="pageTitle">
                    Hello Micro-Blog
                </h3>
            </div>
        </div>
        
        <div id="ng-view" ng-view></div>

        <div class="footer"><hr />Version @ViewBag.Version</div>
    </div>
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/application")
</body>
</html>
